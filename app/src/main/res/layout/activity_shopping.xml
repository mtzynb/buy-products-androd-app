<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_app_theme">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    tools:context="com.example.myapp.finalproject.ShoppingActivity">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="product name:"
        android:textColor="#7726B6" />

    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvName"
        android:layout_marginLeft="160dp"
        android:padding="10dp"
        android:textColor="#E20BA2" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvProductName"
        android:padding="10dp"
        android:text="product price:"
        android:textColor="#e00c1881" />


    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvPrice"
        android:layout_marginLeft="160dp"

        android:padding="10dp"
        android:textColor="#2491c7" />


    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice"
        android:padding="10dp"
        android:text="Quantity"
        android:textColor="#20AF33"
        />


    <EditText

        android:id="@+id/etQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvQuantity"
        android:layout_marginLeft="170dp"
        android:padding="10dp"
        android:textColor="#0FCA8C"
        android:textSize="15sp"
        android:background="#ffffff"
        android:inputType="number"/>


    <ImageView
        android:id="@+id/imageViewProduct"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@id/tvQuantity"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"

        />

    <Button
        android:onClick="btnBuyAndGoToFinalFragment"

        android:id="@+id/btnBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/imageViewProduct"
        android:layout_below="@id/imageViewProduct"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/my_buttons_background"
        android:text="BUY"
        android:textColor="#FCFCFC" />


</RelativeLayout>
</ScrollView>
