<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_marginTop="3dp"
    android:elevation="5dp"
    app:cardBackgroundColor="#C5ECF1"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvProductID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp" />


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProductID"
            android:padding="10dp"
            android:text="product name:"
            android:textColor="#7726B6" />

        <TextView

            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvName"
            android:layout_marginLeft="160dp"
            android:padding="10dp"
            android:textColor="#E20BA2" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:padding="10dp"
            android:text="product price:"
            android:textColor="#e00c1881" />


        <TextView

            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvPrice"
            android:layout_marginLeft="160dp"
            android:padding="10dp"
            android:textColor="#2491c7" />


        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/tvPrice"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/imageViewProduct"
            android:layout_below="@id/tvPrice"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/imageViewProduct"
            android:background="@drawable/my_buttons_background"
            android:text="BUY"
            android:textColor="#FCFCFC" />


    </RelativeLayout>


</android.support.v7.widget.CardView>