<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardBackgroundColor="#E9EFB1"
    app:cardCornerRadius="5dp"
    android:layout_margin="20dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="product name:"
            android:textColor="#e00c1881" />

        <TextView

            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvName"
            android:layout_marginLeft="160dp"
            android:padding="10dp"
            android:textColor="#e00ba0ea" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvProductName"
            android:padding="10dp"
            android:text="product price:"
            android:textColor="#e00c1881" />


        <TextView

            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvPrice"
            android:layout_marginLeft="160dp"
            android:padding="10dp"
            android:textColor="#E016803B" />



        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPrice"
            android:padding="10dp"
            android:text="Quantity:"
            android:textColor="#e00c1881" />


        <TextView

            android:id="@+id/tvProductQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvQuantity"
            android:layout_marginLeft="160dp"
            android:padding="10dp"
            android:textColor="#E016803B" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvQuantity"
            android:padding="10dp"
            android:text="Order Date:"
            android:textColor="#e00c1881" />


        <TextView

            android:id="@+id/tvProductDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvDate"
            android:layout_marginLeft="160dp"
            android:padding="10dp"
            android:textColor="#E016803B" />
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDate"
            android:padding="10dp"
            android:text="Total:"
            android:textColor="#e00c1881" />


        <TextView

            android:id="@+id/tvProductTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvTotal"
            android:layout_marginLeft="160dp"
            android:padding="10dp"
            android:textColor="#E016803B" />





    </RelativeLayout>


</android.support.v7.widget.CardView>